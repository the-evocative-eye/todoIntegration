<!DOCTYPE html>
<html lang="en">
<head>
    <title>todo</title>
</head>
<body>
    <table>
        <tr>
            <th>id</th>
            <th>title</th>
            <th>action</th>
        </tr>
        <% data.forEach(element => { %>
<tr>
    <td><%= element.todoid %></td>
    <td><%= element.todotitle %></td>
    <td><%= element.todoaction %></td>
    <td>
        <form action="/deletetodos" method="post">
            <input type="text" name="todoid" value="<%= element.todoid %>">
            <input type="text" name="todotitle" value="<%= element.todotitle %>">
            <input type="text" name="todoaction" value="<%= element.todoaction %>">
            <button type="submit">Delete</button>
        </form>
    </td>
</tr>
       <% }) %>
    </table>
    <form action="/addtodos" method="post">
        <input type="text" name "todotask" placeholder="input details">
        <button type="submit">Add</button>
    </form>
</body>
</html>